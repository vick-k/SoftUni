@using CinemaWebApp.ViewModels.Cinema;
@model CinemaCreateViewModel

@{
	ViewData["Title"] = "Add New Cinema";
}

<h2>Add a New Cinema</h2>

<form asp-action="Create" class="mt-4" method="post">
	@Html.AntiForgeryToken()

	<div class="form-group mb-3">
		<label asp-for="Name" class="control-label fw-bold"></label>
		<input asp-for="Name" class="form-control" />
		<span asp-validation-for="Name" class="text-danger fst-italic"></span>
	</div>

	<div class="form-group mb-3">
		<label asp-for="Location" class="control-label fw-bold"></label>
		<input asp-for="Location" class="form-control" />
		<span asp-validation-for="Location" class="text-danger fst-italic"></span>
	</div>

	<div class="form-group mt-4">
		<button type="submit" class="btn btn-primary">Add Cinema</button>
	</div>
	<a asp-action="Index" class="btn btn-secondary mt-2">Back to Cinemas List</a>
</form>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
