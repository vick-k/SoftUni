@using CinemaWebApp.ViewModels.Movie
@model MovieViewModel

@{
	ViewData["Title"] = "Add New Movie";
}

<h2>Add a New Movie</h2>

<form asp-action="Create" class="row g-3 w-50" method="post">
	<div class="col-md-8">
		<label for="Title" class="fw-bold">Title</label>
		<input asp-for="Title" class="form-control" />
		<span asp-validation-for="Title" class="text-danger fst-italic"></span>
	</div>
	<div class="col-md-4">
		<label for="Genre" class="fw-bold">Genre</label>
		<input asp-for="Genre" class="form-control" />
		<span asp-validation-for="Genre" class="text-danger fst-italic"></span>
	</div>
	<div class="col-md-6">
		<label for="ReleaseDate" class="fw-bold">Release Date</label>
		<input asp-for="ReleaseDate" type="date" class="form-control" />
		<span asp-validation-for="ReleaseDate" class="text-danger fst-italic"></span>
	</div>
	<div class="col-md-6">
		<label for="Duration" class="fw-bold">Duration (minutes)</label>
		<input asp-for="Duration" class="form-control" />
		<span asp-validation-for="Duration" class="text-danger fst-italic"></span>
	</div>
	<div>
		<label for="Director" class="fw-bold">Director</label>
		<input asp-for="Director" class="form-control" />
		<span asp-validation-for="Director" class="text-danger fst-italic"></span>
	</div>
	<div>
		<label for="Description" class="fw-bold">Description</label>
		<textarea asp-for="Description" class="form-control"></textarea>
		<span asp-validation-for="Description" class="text-danger fst-italic"></span>
	</div>
	<div class="col-12">
		<button type="submit" class="btn btn-primary mt-2 mb-3">Create Movie</button>
	</div>
</form>

<a asp-action="Index">Back to Movies List</a>
